---
interface Props {
  title: string;
  description: string;
  icon: string;
  size?: "large" | "wide" | "tall" | "standard";
  accentColor?: string;
}

const {
  title,
  description,
  icon,
  size = "standard",
  accentColor = "var(--color-brand-500)",
} = Astro.props;

const sizeClasses: Record<string, string> = {
  large: "md:col-span-2 md:row-span-2",
  wide: "md:col-span-2",
  tall: "md:row-span-2",
  standard: "",
};
---

<div
  class:list={[
    "bento-card hover-lift reveal group relative overflow-hidden rounded-2xl border p-6 md:p-8",
    sizeClasses[size],
  ]}
  style={`
    background: var(--color-surface-1);
    border-color: var(--color-line-soft);
  `}
>
  <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl" style={`background: ${accentColor}; opacity: 0.15;`}>
    <span class="text-2xl" style={`color: ${accentColor};`} aria-hidden="true" set:html={icon} />
  </div>
  <h3 class="mb-2 font-display text-xl font-semibold md:text-2xl" style="color: var(--color-text-0);">
    {title}
  </h3>
  <p class="text-base leading-relaxed" style="color: var(--color-text-1);">
    {description}
  </p>

  <!-- Accent glow on hover -->
  <div
    class="pointer-events-none absolute -bottom-8 -right-8 h-32 w-32 rounded-full opacity-0 blur-3xl transition-opacity duration-300 group-hover:opacity-100"
    style={`background: ${accentColor};`}
    aria-hidden="true"
  ></div>
</div>
