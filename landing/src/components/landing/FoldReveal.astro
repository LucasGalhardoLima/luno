---
import type { LandingCopy } from '@/content/types';

interface Props {
  copy: LandingCopy;
}

const { copy } = Astro.props;
---

<section class="fold fold-reveal reveal" data-scene="reveal" id="fold-reveal">
  <div class="fold-shell">
    <p class="chapter-tag" data-i18n="chapters.revealTagline">{copy.chapters.revealTagline}</p>
    <div class="reveal-grid">
      <div>
        <h2 class="scene-title" data-i18n="reveal.title">{copy.reveal.title}</h2>
        <p class="scene-body" data-i18n="reveal.body">{copy.reveal.body}</p>
      </div>

      <div class="reveal-stack" role="list">
        <article class="stack-card" role="listitem" data-i18n="reveal.truths.0">{copy.reveal.truths[0]}</article>
        <article class="stack-card" role="listitem" data-i18n="reveal.truths.1">{copy.reveal.truths[1]}</article>
        <article class="stack-card" role="listitem" data-i18n="reveal.truths.2">{copy.reveal.truths[2]}</article>
      </div>
    </div>
  </div>
</section>
