---
import type { LandingCopy } from '@/content/types';

interface Props {
  copy: LandingCopy;
}

const { copy } = Astro.props;
---

<section class="fold fold-proof reveal" data-scene="proof-flow" id="fold-proof-flow">
  <div class="fold-shell proof-grid">
    <div class="proof-copy">
      <p class="chapter-tag" data-i18n="chapters.proofTagline">{copy.chapters.proofTagline}</p>
      <h2 class="scene-title" data-i18n="proofFlow.title">{copy.proofFlow.title}</h2>
      <p class="scene-body" data-i18n="proofFlow.subtitle">{copy.proofFlow.subtitle}</p>

      <ul class="proof-bullets">
        <li data-i18n="proofFlow.proofBullets.0">{copy.proofFlow.proofBullets[0]}</li>
        <li data-i18n="proofFlow.proofBullets.1">{copy.proofFlow.proofBullets[1]}</li>
        <li data-i18n="proofFlow.proofBullets.2">{copy.proofFlow.proofBullets[2]}</li>
      </ul>
    </div>

    <div class="proof-visuals">
      <figure class="proof-card proof-card-main" data-tilt>
        <img
          src="/images/luno-capture-light.png"
          alt="Luno light mode capture screen"
          width="768"
          height="1344"
          loading="lazy"
          decoding="async"
        />
      </figure>
      <figure class="proof-card proof-card-secondary" data-tilt>
        <img
          src="/images/luno-note-card.png"
          alt="Luno note card with PARA category"
          width="1132"
          height="598"
          loading="lazy"
          decoding="async"
        />
      </figure>
    </div>

    <div class="flow-strip">
      <h3 class="scene-title-sm" data-i18n="proofFlow.flowTitle">{copy.proofFlow.flowTitle}</h3>
      <div class="flow-track" role="list">
        <article class="flow-step" role="listitem">
          <span>01</span>
          <h4 data-i18n="proofFlow.steps.0.title">{copy.proofFlow.steps[0].title}</h4>
          <p data-i18n="proofFlow.steps.0.body">{copy.proofFlow.steps[0].body}</p>
        </article>
        <article class="flow-step" role="listitem">
          <span>02</span>
          <h4 data-i18n="proofFlow.steps.1.title">{copy.proofFlow.steps[1].title}</h4>
          <p data-i18n="proofFlow.steps.1.body">{copy.proofFlow.steps[1].body}</p>
        </article>
        <article class="flow-step" role="listitem">
          <span>03</span>
          <h4 data-i18n="proofFlow.steps.2.title">{copy.proofFlow.steps[2].title}</h4>
          <p data-i18n="proofFlow.steps.2.body">{copy.proofFlow.steps[2].body}</p>
        </article>
      </div>
    </div>
  </div>
</section>
