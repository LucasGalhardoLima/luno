---
import type { LandingCopy } from '@/content/types';

interface Props {
  copy: LandingCopy;
}

const { copy } = Astro.props;
---

<section class="fold fold-hook reveal" data-scene="hook" id="hero">
  <div class="chaos-aura" data-parallax="0.009" aria-hidden="true"></div>
  <div class="hook-grid">
    <div class="hook-copy">
      <p class="chapter-tag" data-i18n="chapters.hookTagline">{copy.chapters.hookTagline}</p>
      <p class="scene-kicker" data-i18n="hook.eyebrow">{copy.hook.eyebrow}</p>
      <h1 class="display-title" data-i18n="hook.title">{copy.hook.title}</h1>
      <p class="scene-body" data-i18n="hook.subtitle">{copy.hook.subtitle}</p>

      <div class="chip-grid" role="list">
        <p class="mini-chip" role="listitem" data-i18n="hook.painChips.0">{copy.hook.painChips[0]}</p>
        <p class="mini-chip" role="listitem" data-i18n="hook.painChips.1">{copy.hook.painChips[1]}</p>
        <p class="mini-chip" role="listitem" data-i18n="hook.painChips.2">{copy.hook.painChips[2]}</p>
        <p class="mini-chip" role="listitem" data-i18n="hook.painChips.3">{copy.hook.painChips[3]}</p>
      </div>

      <div class="cta-row">
        <a
          href="#waitlist"
          class="focus-ring cta cta-primary"
          data-preserve-utm
          data-track-cta
          data-i18n="hook.ctaPrimary"
        >
          {copy.hook.ctaPrimary}
        </a>
        <a
          href="#fold-reveal"
          class="focus-ring cta cta-secondary"
          data-preserve-utm
          data-i18n="hook.ctaSecondary"
        >
          {copy.hook.ctaSecondary}
        </a>
      </div>
    </div>

    <div class="hook-collage" data-tilt>
      <figure class="collage-card collage-main">
        <img
          src="/images/luno-capture-dark.png"
          alt="Luno iOS capture screen in dark theme"
          width="768"
          height="1344"
          loading="eager"
          decoding="async"
        />
      </figure>

      <figure class="collage-card collage-side" data-parallax="0.006">
        <img
          src="/images/luno-note-card.png"
          alt="Luno categorized note card"
          width="1132"
          height="598"
          loading="lazy"
          decoding="async"
        />
      </figure>

      <div class="orbit orbit-a" aria-hidden="true"></div>
      <div class="orbit orbit-b" aria-hidden="true"></div>
    </div>
  </div>

  <div class="chapter-transition chapter-transition-hook" aria-hidden="true"></div>
</section>
