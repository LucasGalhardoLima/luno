---
import '@/styles/global.css';
import { siteConfig, siteOrigin } from '@/config/site';

interface Props {
  pageTitle: string;
  pageDescription: string;
  ogImage?: string;
}

const { pageTitle, pageDescription, ogImage = '/images/luno-og.png' } = Astro.props;
const canonical = new URL(Astro.url.pathname, siteOrigin).toString();
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} id="meta-description" />
    <link rel="canonical" href={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteConfig.siteName} />
    <meta property="og:title" content={pageTitle} id="meta-og-title" />
    <meta property="og:description" content={pageDescription} id="meta-og-description" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={new URL(ogImage, siteOrigin).toString()} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} id="meta-twitter-title" />
    <meta name="twitter:description" content={pageDescription} id="meta-twitter-description" />
    <meta name="twitter:image" content={new URL(ogImage, siteOrigin).toString()} />
  </head>
  <body class="antialiased selection:bg-brand500/35">
    <slot />
  </body>
</html>
