---
interface Props {
  name: string;
  description: string;
  icon: string;
  color: string;
}

const { name, description, icon, color } = Astro.props;
---

<div
  class="hover-lift group relative overflow-hidden rounded-2xl border p-6"
  style={`
    background: var(--color-surface-1);
    border-color: var(--color-line-soft);
  `}
>
  <div
    class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl"
    style={`background: ${color}; opacity: 0.15;`}
  >
    <span class="text-2xl" style={`color: ${color};`} aria-hidden="true" set:html={icon} />
  </div>
  <h3 class="mb-1 font-display text-lg font-semibold" style="color: var(--color-text-0);">
    {name}
  </h3>
  <p class="text-sm leading-relaxed" style="color: var(--color-text-1);">
    {description}
  </p>

  <!-- Category accent line -->
  <div
    class="absolute bottom-0 left-0 h-1 w-full opacity-60 transition-opacity group-hover:opacity-100"
    style={`background: ${color};`}
    aria-hidden="true"
  ></div>
</div>
