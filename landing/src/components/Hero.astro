<section class="relative overflow-hidden px-6 py-24 md:py-32 lg:py-40">
  <!-- Lunar orb -->
  <div class="lunar-orb" aria-hidden="true"></div>
  <div class="lunar-glow" aria-hidden="true"></div>

  <div class="relative z-10 mx-auto max-w-4xl text-center">
    <p class="mb-4 text-sm font-medium uppercase tracking-widest" style="color: var(--color-moon-400);">
      Voice-First Notes
    </p>
    <h1 class="mb-6 font-display text-5xl font-bold leading-tight md:text-6xl lg:text-7xl" style="color: var(--color-text-0);">
      Speak your mind.<br />
      <span class="bg-gradient-to-r from-[var(--color-brand-600)] to-[var(--color-moon-400)] bg-clip-text text-transparent">
        Luno captures it.
      </span>
    </h1>
    <p class="mx-auto mb-10 max-w-2xl text-lg md:text-xl" style="color: var(--color-text-1);">
      Capture thoughts by voice, let AI organize them using the PARA method.
      Private, offline-first, beautifully simple.
    </p>
    <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
      <a
        href="#waitlist"
        class="btn-primary inline-flex items-center gap-2 rounded-full px-8 py-4 text-lg font-semibold text-white"
        style="background: linear-gradient(135deg, var(--color-brand-600), var(--color-moon-400));"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/>
          <path d="M19 10v2a7 7 0 0 1-14 0v-2"/>
          <line x1="12" x2="12" y1="19" y2="22"/>
        </svg>
        Join the Waitlist
      </a>
      <a
        href="#features"
        class="inline-flex items-center gap-2 rounded-full border px-8 py-4 text-lg font-medium transition-colors hover:bg-[var(--color-surface-1)]"
        style="border-color: var(--color-line-soft); color: var(--color-text-0);"
      >
        See Features
      </a>
    </div>
  </div>
</section>

<style>
  .lunar-orb {
    position: absolute;
    top: -120px;
    right: -80px;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: radial-gradient(circle at 35% 35%, var(--color-moon-400), var(--color-brand-600) 60%, transparent 70%);
    opacity: 0.15;
    filter: blur(60px);
    pointer-events: none;
  }

  .lunar-glow {
    position: absolute;
    bottom: -60px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(ellipse, var(--color-glow-soft) 0%, transparent 70%);
    pointer-events: none;
  }

  @media (min-width: 768px) {
    .lunar-orb {
      width: 600px;
      height: 600px;
      top: -200px;
      right: -150px;
    }
  }
</style>
